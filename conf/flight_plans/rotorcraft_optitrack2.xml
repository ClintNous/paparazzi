<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="150" ground_alt="147" lat0="51.990634" lon0="4.376789" max_dist_from_home="150" name="Rotorcraft Basic (Enac)" security_height="2">
  <header>
#include "autopilot.h"
  </header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="0.0" y="5.0"/>
    <waypoint name="STDBY" x="-2.0" y="-5.0"/>
    <waypoint name="TD" x="5.6" y="-10.9"/>
    <waypoint name="foto1" x="0.0" y="0.0"/>
    <waypoint name="foto2" x="0.0" y="0.0"/>
    <waypoint name="curr" x="0.0" y="0.0"/>
    <waypoint name="next" x="0.0" y="0.0"/>
    <waypoint name="heading" x="0.0" y="0.0"/>
    <waypoint name="global" lat="51.9906445" lon="4.3767337"/>
    <waypoint name="look" lat="51.9906445" lon="4.3767337"/>
    <waypoint name="global_prev" lat="51.9906445" lon="4.3767337"/>
    <waypoint name="deg90" x="0.0" y="0.0"/>
    <waypoint lat="51.990639" lon="4.376807" name="p1"/>
    <waypoint lat="51.990624" lon="4.376767" name="p2"/>
    <waypoint lat="51.990648" lon="4.376745" name="p3"/>
    <waypoint lat="51.990663" lon="4.376784" name="p4"/>
    <waypoint lat="51.990635" lon="4.376836" name="FA1"/>
    <waypoint lat="51.990606" lon="4.376760" name="FA2"/>
    <waypoint lat="51.990652" lon="4.376712" name="FA3"/>
    <waypoint lat="51.990681" lon="4.376791" name="FA4"/>
    <waypoint lat="51.9906253" lon="4.3768574" name="FZ3"/>
    <waypoint lat="51.9905993" lon="4.3767808" name="FZ4"/>
    <waypoint lat="51.9906445" lon="4.3767337" name="FZ1"/>
    <waypoint lat="51.9906707" lon="4.3768103" name="FZ2"/>
  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA1"/>
      <corner name="FA2"/>
      <corner name="FA3"/>
      <corner name="FA4"/>
    </sector>
  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetWaypointHere(WP_HOME)"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <call fun="NavSetWaypointHere(WP_STDBY)"/>
      <call fun="NavSetWaypointHere(WP_TD)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 2.0" deroute="Standby"/>
      <call fun="NavSetWaypointHere(WP_CLIMB)"/>
      <stay vmode="climb" climb="0.5" wp="CLIMB"/>
    </block>
    <block name="Standby" strip_button="Standby" strip_icon="home.png">
      <stay wp="STDBY"/>
    </block>
    <!-- <block name="keep_pos"> 
      <exception cond="! InsideFlight_Area(GetPosX(), GetPosY())" deroute="stay_p1"/>
      <heading course="stateGetNedToBodyEulers_i()->psi" vmode="alt" alt="GetAltRef() + 2" pitch="15" until="FALSE"/>
	<attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="FALSE"/>
    </block> -->
    <block name="change_heading90">
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="stage_time>0"/>
      <!--<call fun="NavSetWaypointHere(WP_curr)"/> -->
      <!--<call fun="nav_color_new_heading180()"/> -->
      <!-- <call fun="NavSetNewWayPoint(WP_curr,1,WP_next,WP_heading,WP_global,WP_look,WP_FZ1,WP_FZ2,WP_FZ3,WP_FZ4)"/> -->
      <!--<call fun="nav_set_heading_towards_waypoint(WP_heading)"/> -->
      <call fun="nav_set_heading_rad((float)stateGetNedToBodyEulers_f()->psi+ 1.5)"/>
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="stage_time>0"/>
      <deroute block="stay_p1"/>
      </block>
    <block name="change_heading45">
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="stage_time>0"/>
      <call fun="nav_set_heading_rad(stateGetNedToBodyEulers_f()->psi+0.75)"/>
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="stage_time>0"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="change_heading180">
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="stage_time>0"/>
      <call fun="nav_set_heading_rad(stateGetNedToBodyEulers_f()->psi+3.141592654)"/>
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="0" until="stage_time>0"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="keep_heading">
      <exception cond="! InsideFlight_Area(GetPosX(), GetPosY())" deroute="change_heading90"/>
      <exception cond="test_color_count()" deroute="change_heading90"/>
      <attitude roll="0" vmode="alt" alt="GetAltRef() + 2" pitch="-6" until="FALSE"/>
    </block>  
    <block name = "circle">
      <call fun="nav_circle()"/>
    </block>
    <block name="stay_p1">
      <stay wp="p1"/>
    </block>
    <block name="go_p2">
      <call fun="nav_set_heading_deg(90)"/>
      <go wp="p2"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="line_p1_p2">
       <exception cond="! InsideFlight_Area(GetPosX(), GetPosY())" deroute="stay_p1"/>
      <go from="p1" hmode="route" wp="p2"/>
      <stay wp="p2" until="stage_time>10"/>
      <go from="p2" hmode="route" wp="p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="route">
      <go from="p1" hmode="route" wp="p3"/>
      <go from="p3" hmode="route" wp="p4"/>
      <go from="p4" hmode="route" wp="p1"/>
      <deroute block="stay_p1"/>
    </block>
    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="-0.8" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <attitude pitch="0" roll="0" throttle="0" vmode="throttle" until="FALSE"/>
    </block> 
  </blocks>
</flight_plan>
